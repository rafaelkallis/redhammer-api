{
  "name": "redhammer-api",
  "version": "1.0.0",
  "scripts": {
    "start": "node build/index.js",
    "dev": "ts-node-dev --respawn --transpileOnly src/index.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "tslint --project tsconfig.json --format codeFrame",
    "lint:fix": "tslint --fix --project tsconfig.json",
    "prettier": "prettier --config .prettierrc --write \"src/**/*.ts\" \"migrations/*.js\" \"seeders/*.js\"",
    "prettier:check": "prettier --check --config .prettierrc \"src/**/*.ts\""
  },
  "dependencies": {
    "dotenv-safe": "6.1.0",
    "envalid": "5.0.0",
    "koa": "2.7.0",
    "koa-router": "7.4.0"
  },
  "devDependencies": {
    "@types/dotenv-safe": "5.0.3",
    "@types/koa": "2.0.48",
    "@types/koa-router": "7.0.40",
    "husky": "1.3.1",
    "lint-staged": "8.1.5",
    "prettier": "1.16.4",
    "ts-node-dev": "1.0.0-pre.32",
    "tslint": "5.15.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.4.3"
  }
}
