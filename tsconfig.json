{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "es6",
    "outDir": "./build",
    "baseUrl": "./src",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "paths": {
      "@app": ["./app"],
      "@route": ["./route"],
      "@config": ["./config"],
      "@errors": ["./errors"],
      "@constants": ["./constants"],
      "@services": ["./services"],
      "@types": ["./types"],
      "@middlewares": ["./middlewares"],
      "@models": ["./models"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
